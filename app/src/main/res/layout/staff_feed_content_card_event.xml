<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.MaterialComponents.CardView"
    app:cardElevation="@dimen/app_card_elevation"
    android:layout_marginStart="@dimen/app_card_margins"
    android:layout_marginEnd="@dimen/app_card_margins"
    android:layout_marginTop="@dimen/app_card_margin_top"
    android:layout_width="match_parent"
    android:layout_height="225dp"
    android:minHeight="150dp"
    tools:ignore="ContentDescription">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <RelativeLayout
                android:id="@+id/rl_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/event_image"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="80dp" />

                <ProgressBar
                    android:id="@+id/event_image_progress"
                    android:layout_centerInParent="true"
                    android:indeterminate="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <TextView
                    android:id="@+id/event_text_header"
                    android:gravity="center_horizontal"
                    style="@style/Labels.Title.Dark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"/>

                <android.support.constraint.ConstraintLayout
                    android:layout_below="@id/event_text_header"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">


                    <TextView
                        android:id="@+id/event_body"
                        style="@style/Labels.Body.Normal.Dark"
                        android:gravity="center_horizontal"
                        android:layout_width="309dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:lines="2"
                        android:minLines="2"
                        android:paddingStart="4dp"
                        android:paddingEnd="10dp"
                        android:singleLine="false"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </android.support.constraint.ConstraintLayout>

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/rl_body_time"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_header"
                android:layout_marginTop="3dp">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_access_time_dark_24dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:background="@color/grey_400"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:weightSum="100">

                    <TextView
                        android:id="@+id/event_date_start"
                        style="@style/Labels.Body.Normal.Dark"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:layout_weight="30"/>

                    <TextView
                        android:id="@+id/event_date_time"
                        style="@style/Labels.Body.Normal.Dark"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="40"/>

                    <TextView
                        android:id="@+id/event_date_end"
                        style="@style/Labels.Body.Normal.Dark"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="30"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl_body_location"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_body_time"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_add_location_dark_24dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:background="@color/grey_400"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:weightSum="100">

                    <TextView
                        android:id="@+id/event_location"
                        style="@style/Labels.Body.Normal.Dark"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:layout_weight="100"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_event_actions_invitation"
                android:orientation="horizontal"
                android:weightSum="100"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <Button
                    android:id="@+id/event_btn_learn_more"
                    android:text="@string/general_learn_more"
                    style="@style/Buttons.Flat.Link"
                    android:background="@color/colorTransparent"
                    android:layout_width="0dp"
                    android:layout_weight="25"
                    android:layout_height="wrap_content" />

                <Space
                    android:layout_width="0dp"
                    android:layout_weight="20"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/event_btn_not_going"
                    android:text="@string/staff_feed_card_event_not_going"
                    style="@style/Buttons.Outline.Dark"
                    android:layout_width="0dp"
                    android:layout_weight="25"
                    android:layout_height="40dp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/event_btn_going"
                    android:text="@string/staff_feed_card_event_going"
                    style="@style/Buttons.Raised.Light"
                    android:layout_width="0dp"
                    android:layout_weight="25"
                    android:layout_height="40dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_event_actions_pending"
                android:orientation="horizontal"
                android:weightSum="100"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <Button
                    android:id="@+id/event_btn_learn_more_pending"
                    android:text="@string/general_learn_more"
                    style="@style/Buttons.Flat.Link"
                    android:background="@color/colorTransparent"
                    android:layout_width="0dp"
                    android:layout_weight="25"
                    android:layout_height="wrap_content" />

                <Space
                    android:layout_width="0dp"
                    android:layout_weight="20"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/event_time_left"
                    android:gravity="end|center_vertical"
                    android:padding="10dp"
                    style="@style/Labels.Title.Dark"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:layout_weight="55"/>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_event_actions_after"
                android:orientation="horizontal"
                android:weightSum="100"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:visibility="gone">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_event_pictures"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"/>

            </LinearLayout>


        </RelativeLayout>


</android.support.design.card.MaterialCardView>
