<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/app_wallpaper"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ProgressBar
        android:id="@+id/entry_progress_bar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/entry_content_progress_margin_bottom"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/app_progress_bar_circle"
        android:layout_width="@dimen/progress_circle_size"
        android:layout_height="@dimen/progress_circle_size" />


</RelativeLayout>