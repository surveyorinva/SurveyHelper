<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/login_content_welcome_margin_top"
    android:layout_marginStart="@dimen/login_content_welcome_margin"
    android:layout_marginEnd="@dimen/login_content_welcome_margin"
    android:gravity="center"
    android:layout_height="150dp">

    <TextView
        android:id="@+id/content_login_welcome_header"
        style="@style/Labels.Heading.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/appLogin_main_header" />

    <TextView
        android:id="@+id/content_login_welcome_summary"
        android:text="@string/appLogin_main_summary"
        android:layout_below="@+id/content_login_welcome_header"
        android:gravity="center"
        style="@style/Labels.Body.Normal.Light"
        android:fontFamily="@font/open_sans_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>